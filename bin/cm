#!/usr/bin/env ruby

begin
  require 'cm'

  # Set version info

  module Nucleon; module Util; module CLI
  class Parser
    def version
      version = CM.VERSION
      "CM: #{version}  (Apache License, Version 2.0)  --  https://github.com/adrianwebb/cm/tree/v#{version}"  
    end
  end
  end; end; end

  # Execute

  exit(Nucleon.executable(ARGV, :cm))

rescue Interrupt
  exit(Nucleon.interrupt_handler)
end
